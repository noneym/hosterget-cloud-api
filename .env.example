# Database Configuration
DATABASE_URL=postgresql://user:password@host:port/database
PGHOST=your-postgres-host
PGPORT=5432
PGUSER=your-postgres-user
PGPASSWORD=your-postgres-password
PGDATABASE=your-database-name

# Session Secret (Generate a random 32+ character string)
SESSION_SECRET=45654564safasfas456456asf5a6s4f65a4

# Authentication (Optional - defaults to Replit OIDC)
ISSUER_URL=https://replit.com/oidc

# Stripe Configuration (Get from https://dashboard.stripe.com)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
VITE_STRIPE_PUBLIC_KEY=pk_live_your_stripe_public_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Test Keys (Used in testing environment)
TESTING_STRIPE_SECRET_KEY=sk_test_your_test_key
TESTING_VITE_STRIPE_PUBLIC_KEY=pk_test_your_test_key

# Deployment Configuration
PORT=5000
NODE_ENV=development

# Replit-specific (Only if running ON Replit platform)
# These are auto-set by Replit - find with: echo $REPL_ID or echo $REPLIT_DOMAINS
# If deploying elsewhere (Docker, VPS, etc.), you can omit these
REPL_ID=your-repl-id
REPLIT_DOMAINS=your-domain.replit.app
